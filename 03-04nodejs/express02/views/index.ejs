<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="css/basic.css"/>

</head>
<body>
    <h1>学生管理系统</h1>
    <a href="/add">添加学生</a>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>姓名</th>
            <th>年龄</th>
            <th>学号</th>
            <th>头像</th>
            <th>操作</th>
        </tr>


        <% for(var i=0;i<list.length;i++){ %>
        <tr>


            <td><%=list[i].name%></td>

            <td><%=list[i].age%></td>

            <td><%=list[i].num%></td>

            <td><img width="80" src="<%= list[i].face %>" alt=""/></td>

            <td><a href="/edit?id=<%=list[i]._id%>">修改</a>  <a href="/delete?id=<%=list[i]._id%>">删除</a></td>

        </tr>
        <% } %>


    </table>
</body>
</html>